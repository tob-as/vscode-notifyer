{
  "model": "opus",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git status)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pwd)",
      "Bash(python3:*)",
      "Bash(python:*)",
      "Bash(sed:*)",
      "Bash(test:*)",
      "Bash(uv:*)",
      "Bash(uvicorn:*)",
      "Edit",
      "Glob",
      "Grep",
      "MultiEdit",
      "Read",
      "Write"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Read(*credential*)",
      "Read(*secret*)",
      "Read(.env)"
    ],
    "deny": [
      "Bash(chmod 777:*)",
      "Bash(docker:*)",
      "Bash(sudo:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/statusline.sh"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/read-references-reminder.sh",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "env": {
    "MAX_THINKING_TOKENS": "10000"
  }
}
