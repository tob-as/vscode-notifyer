{
  "permissions": {
    "read": ["**/*"],
    "write": [
      ".claude/**",
      ".github/**",
      "docs/**",
      "infra/**",
      "reports/**",
      "scripts/**",
      "README.md",
      "CLAUDE.md",
      "CLAUDE_SCOPE.md",
      "setup-claude.sh",
      "install.sh",
      "package.json"
    ],
    "deny": [
      "Read(.env)",
      "Read(.dev.vars)",
      "Read(**/.env)",
      "Read(**/.dev.vars)",
      "Read(secrets/**)",
      "Edit(.env)",
      "Edit(.dev.vars)",
      "Write(.env)",
      "Write(.dev.vars)",
      "Write(secrets/**)"
    ]
  }
}
