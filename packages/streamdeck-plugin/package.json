{
  "name": "approval-deck-streamdeck-plugin",
  "version": "1.1.0",
  "description": "Stream Deck plugin for Claude Code approval notifications",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "node esbuild.mjs && node scripts/copy-assets.cjs",
    "build:prod": "node esbuild.mjs --production && node scripts/copy-assets.cjs",
    "watch": "node esbuild.mjs --watch",
    "link": "streamdeck link com.approval-deck.sdPlugin",
    "pack": "npm run build:prod && streamdeck pack com.approval-deck.sdPlugin --force",
    "restart": "streamdeck restart com.approval-deck"
  },
  "devDependencies": {
    "@elgato/cli": "^1.0.0",
    "@types/node": "^20.10.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@elgato/streamdeck": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
